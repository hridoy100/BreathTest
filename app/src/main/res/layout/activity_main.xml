<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center|top"
        >
        <LinearLayout
            android:id="@+id/linLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top"
            >
            <TextView
                android:id="@+id/topbar"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rounded_rectangle"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="Record Sound"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="@font/montserrat_bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/circle_ring"
                android:backgroundTint="#454B53"
                >
                <Button
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/ic_mic_black_24dp"
                    android:backgroundTint="#00b8a4"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:onClick="start_recording"
                    android:id="@+id/recordButton"
                    android:layout_centerInParent="true"
                    android:stateListAnimator="@null"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/circle"
                    android:id="@+id/playButtonLayout"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"
                    >
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/play_button"
                        android:gravity="center"
                        android:textSize="18sp"
                        app:fontFamily="@font/roboto_bold"
                        android:onClick="play_sound"
                        android:id="@+id/playButton"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/circle_ring"
                    android:backgroundTint="#454B53"
                    android:id="@+id/stopButtonLayout"
                    android:visibility="visible"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    >
                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/ic_stop_black_24dp"
                        android:backgroundTint="#00b8a4"
                        android:gravity="center"
                        android:textSize="18sp"
                        app:fontFamily="@font/roboto_bold"
                        android:id="@+id/stopButton"
                        android:onClick="stopAudio"
                        android:enabled="false"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@drawable/circle"
                    android:id="@+id/progressBarLayout"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ProgressBar
                        android:progress="0"
                        android:id="@+id/progress_bar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:visibility="invisible"
                        android:progressDrawable="@drawable/circle_border"
                        android:rotation="-90"
                        />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">
            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:onClick="submit"

                />
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>